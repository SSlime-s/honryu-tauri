{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "honryu",
	"version": "0.1.3",
	"identifier": "com.honryu.app",
	"build": {
		"beforeDevCommand": "pnpm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "honryu",
				"width": 800,
				"height": 600,
				"decorations": false,
				"transparent": true,
				"visible": false
			}
		],
		"security": {
			"csp": null
		},
		"macOSPrivateApi": true
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
